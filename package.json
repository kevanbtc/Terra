{
  "name": "@kevanbtc/iyield-protocol",
  "version": "1.0.0",
  "description": "The first insurance-backed RWA tokenization protocol with enterprise-grade infrastructure",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevanbtc/Terra.git"
  },
  "keywords": [
    "defi",
    "rwa",
    "tokenization",
    "insurance",
    "csv",
