    "verify:mainnet": "hardhat verify --network mainnet",
    "validate:sepolia": "hardhat run scripts/validate-deployment.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@hardhat-toolbox/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
