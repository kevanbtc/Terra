  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:integration": "hardhat test test/integration/*.spec.ts",
    "coverage": "hardhat coverage",
    "gas-report": "REPORT_GAS=true hardhat test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
