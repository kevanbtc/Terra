# Ethereum Network Configuration
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=your_private_key_here

# Etherscan API
ETHERSCAN_API_KEY=your_etherscan_api_key

# Gas Reporting
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Frontend Environment
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
NEXT_PUBLIC_NETWORK=mainnet
NEXT_PUBLIC_SAFE_GOV_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_SAFE_GUARDIAN_ADDRESS=0x0000000000000000000000000000000000000000

# Contract Addresses (deployed)
NEXT_PUBLIC_CSV_TOKEN_ADDRESS=
NEXT_PUBLIC_CSV_VAULT_ADDRESS=
NEXT_PUBLIC_CSV_ORACLE_ADDRESS=
NEXT_PUBLIC_COMPLIANCE_REGISTRY_ADDRESS=

# Oracle Configuration
ORACLE_ATTESTORS=attestor1_address,attestor2_address,attestor3_address
ORACLE_THRESHOLD=2
ORACLE_FRESHNESS_TIMEOUT=3600

# Database (for oracle)
DATABASE_URL=postgresql://username:password@localhost:5432/iyield_oracle

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Terraform Variables
TF_VAR_project_name=iyield
TF_VAR_domain_name=iyield.com
TF_VAR_aws_primary_region=us-east-1
TF_VAR_aws_secondary_region=us-west-2
TF_VAR_ethereum_network=mainnet
TF_VAR_safe_gov_address=0x0000000000000000000000000000000000000000
TF_VAR_safe_guardian_address=0x0000000000000000000000000000000000000000
TF_VAR_rpc_primary_url=https://mainnet.infura.io/v3/YOUR_KEY
TF_VAR_rpc_fallback_url=https://eth-mainnet.alchemyapi.io/v2/YOUR_KEY
TF_VAR_db_password=secure_database_password

# Security Scanning
MYTHX_API_KEY=your_mythx_api_key

# GitHub Container Registry
DOCKER_USERNAME=your_github_username
DOCKER_TOKEN=your_github_token